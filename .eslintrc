{
    "env": {
        "browser": true,
        "es2017": true,
        "jquery": true,
        "es6": true
    },

    "parserOptions": {
        "parser": "@babel/eslint-parser",
        "allowImportExportEverywhere": true,
        "extends": ["eslint:recommended", "prettier"],
        "sourceType": "module",
        "ecmaVersion": 2017,
        "globals": {
            "jquery": "readonly",
            "$": "readonly",
            "utils": "readonly"
        }
    },
    "rules": {
        "semi": [
            "error", "always", { "omitLastInOneLineBlock": true }
        ]
    }
}